import numpy as np
# initialize array for prices
prices = np.array([[40, 35, 20], [21, 48, 70]])

# Code starts here
# flatten the array
prices = prices.flatten()

# minimum price
buying_price = np.min(prices)
print(buying_price)

# index of buying price
prices = prices.tolist()
index = prices.index(buying_price)

# create subset
subset = np.asarray(prices)
subset1 = subset[index:]

# selling price
selling_price = subset1.max(axis=0)
print(selling_price)
# profit

profit = selling_price-buying_price
# display
print(profit)
# Code ends here
